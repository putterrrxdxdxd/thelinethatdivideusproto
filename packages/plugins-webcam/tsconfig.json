{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "composite": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "typeRoots": [
      "../../shared/dist",
      "../../node_modules/@types",
      "../../node_modules"
    ],
    "baseUrl": ".",
    "paths": {
      "@theline/shared": ["../../shared/dist"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
  